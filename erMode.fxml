      <ChoiceBox fx:id="cbOutput" layoutX="186.0" layoutY="51.0" onMouseClicked="#choiceOutput" prefHeight="30.0" prefWidth="100.0" />
      <Button fx:id="exchange" layoutX="111.0" layoutY="198.0" mnemonicParsing="false" onAction="#exchangeCurrency" text="Exchange" />
