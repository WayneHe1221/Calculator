            <Font size="18.0" />
         </font></TextArea>
      <Polygon fill="#06111b" layoutX="150.0" layoutY="123.0" rotate="90.0" scaleX="0.25" scaleY="0.25" scaleZ="0.5" stroke="BLACK" strokeType="INSIDE">
        <points>
          <Double fx:value="-50.0" />
          <Double fx:value="40.0" />
          <Double fx:value="50.0" />
          <Double fx:value="40.0" />
          <Double fx:value="0.0" />
          <Double fx:value="-60.0" />
        </points>
      </Polygon>
