      <Button fx:id="mode2" layoutX="100.0" mnemonicParsing="false" onAction="#switchPDMode" prefHeight="30.0" prefWidth="100.0" text="PDMode" />
      <Button fx:id="mode3" layoutX="200.0" mnemonicParsing="false" onAction="#switchERMode" prefHeight="30.0" prefWidth="100.0" text="ERMode" />
      <Label fx:id="hint" layoutX="14.0" layoutY="144.0" prefHeight="44.0" prefWidth="270.0">
         <font>
            <Font size="18.0" />
         </font>
      </Label>
   </children>
